<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_20"
    android:background="@color/bg_main_layout"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="top">


        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_back" />

        <TextView
            style="@style/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="支付宝提现" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/btn_white_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">


        <EditText
            android:id="@+id/zfb_name"
            android:layout_width="150dp"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:hint="请输入真实姓名"
            android:textCursorDrawable="@null"
            android:textSize="13dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bar_grey" />

        <EditText
            android:id="@+id/zfb_account"
            android:layout_width="150dp"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:hint="请输入支付宝账号"
            android:textCursorDrawable="@null"
            android:textSize="13dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/btn_white_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                style="@style/textTitlesmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="提现金额"
                android:textColor="@color/praise_item_default"
                android:textSize="@dimen/dp_15" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/bar_grey" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/focus_person"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingTop="5dp"
                android:text="¥"
                android:textColor="@color/praise_item_default"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/cush_money"
                style="@style/textTitleHuge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/icon_zfb"
                tools:text="250" />


        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_cashout"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/shaper_bg_orange"
        android:text="提 现"
        android:textColor="@color/white"
        android:textSize="16dp" />
</LinearLayout>