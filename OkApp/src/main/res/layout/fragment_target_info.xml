<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_15"
    android:background="@color/bg_main_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/mall_white"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="@dimen/dp_11"
                        android:gravity="center|right"
                        android:text="目标信息"
                        android:textColor="@color/mall_color33" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/dp_12"
                        android:orientation="horizontal"
                        android:paddingLeft="23dp">

                        <TextView
                            style="@style/textTitlesmall1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="目标创建人" />

                        <TextView
                            android:id="@+id/creater"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/dp_11"
                            android:gravity="center|right"
                            android:textColor="@color/text_aaa"
                            android:textSize="@dimen/dp_15"
                            tools:text="范冰冰" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/dp_12"
                        android:orientation="horizontal"
                        android:paddingLeft="23dp">

                        <TextView
                            style="@style/textTitlesmall1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="开始时间" />

                        <TextView
                            android:id="@+id/begin_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/dp_11"
                            android:gravity="center|right"
                            android:textColor="@color/text_aaa"
                            android:textSize="@dimen/dp_15"
                            tools:text="定期健身" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/dp_12"
                        android:orientation="horizontal"
                        android:paddingLeft="23dp">

                        <TextView
                            style="@style/textTitlesmall1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="结束时间" />

                        <TextView
                            android:id="@+id/end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/dp_11"
                            android:gravity="center|right"
                            android:textColor="@color/text_aaa"
                            android:textSize="@dimen/dp_15"
                            tools:text="定期健身" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/dp_12"
                        android:orientation="horizontal"
                        android:paddingLeft="23dp">

                        <TextView
                            style="@style/textTitlesmall1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="每周" />

                        <TextView
                            android:id="@+id/weeks"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/dp_11"
                            android:gravity="center|right"
                            android:textColor="@color/text_aaa"
                            android:textSize="@dimen/dp_15"
                            tools:text="定期健身" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/dp_12"
                        android:orientation="horizontal"
                        android:paddingLeft="23dp">

                        <TextView
                            style="@style/textTitlesmall1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="提醒时间" />

                        <TextView
                            android:id="@+id/alartime"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/dp_11"
                            android:gravity="center|right"
                            android:textColor="@color/text_aaa"
                            android:textSize="@dimen/dp_15"
                            tools:text="21:00" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_12"
                        android:orientation="horizontal"
                        android:paddingLeft="23dp">

                        <TextView
                            style="@style/textTitlesmall1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="二维码" />

                        <RelativeLayout
                            android:id="@+id/qcode_ll"
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp">

                            <ImageView
                                android:id="@+id/icon_rr3"
                                android:layout_width="@dimen/dp_15"
                                android:layout_height="@dimen/dp_15"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_right" />


                            <ImageView
                                android:id="@+id/my_qcode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_toLeftOf="@id/icon_rr3"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/qcode" />


                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_private"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="--"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:minHeight="25dp"
                        android:orientation="horizontal"
                        android:paddingLeft="23dp">

                        <TextView
                            style="@style/textTitlesmall1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="监督人" />


                        <TextView
                            android:id="@+id/monitor_list"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:gravity="center_vertical|right"
                            android:maxLines="2"
                            android:text="--"
                            android:textColor="@color/text_aaa"
                            android:textSize="@dimen/dp_15" />
                    </LinearLayout>

                    <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="25dp"-->
                    <!--android:layout_marginTop="@dimen/dp_12"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:paddingLeft="23dp">-->

                    <!--<TextView-->
                    <!--style="@style/textTitlesmall1"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:layout_weight="1"-->
                    <!--android:gravity="center|left"-->
                    <!--android:text="收藏" />-->

                    <!--<TextView-->
                    <!--android:id="@+id/books"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:layout_marginRight="@dimen/dp_11"-->
                    <!--android:gravity="center|right"-->
                    <!--android:text="书籍"-->
                    <!--android:textColor="@color/text_aaa"-->
                    <!--android:textSize="@dimen/dp_15" />-->
                    <!--</LinearLayout>-->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/dp_12"
                        android:paddingLeft="23dp">

                        <TextView
                            android:id="@+id/set_tiaozhan"
                            style="@style/textTitlesmall1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="挑战金" />

                        <TextView
                            android:id="@+id/f_fine"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:gravity="center_vertical|right"
                            android:textColor="@color/text_aaa"
                            android:textSize="@dimen/dp_15"
                            tools:text="20" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_from"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/dp_12"
                        android:orientation="horizontal"
                        android:paddingLeft="23dp">

                        <TextView
                            style="@style/textTitlesmall1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="From" />

                        <TextView
                            android:id="@+id/from"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="5dp"
                            android:gravity="center|right"
                            android:textColor="@color/text_aaa"
                            android:textSize="@dimen/dp_15"
                            tools:text="#中国好声音#" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_child"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/child_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_15"
                            android:text="2个字目标" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/child_recycle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/add_child_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@drawable/btn_kuang"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/mall_colorPrimaryDark"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:gravity="center"
                            android:text="子目标 "
                            android:textColor="@color/mall_colorPrimaryDark" />


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_50"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10">

                        <ImageView
                            android:id="@+id/iv_common_more"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/msg" />


                        <LinearLayout
                            android:id="@+id/digCommentBody"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_common_more"
                            android:background="@color/bg_itme"
                            android:minHeight="30dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.xinyu.newdiggtest.widget.PraiseListView
                                android:id="@+id/praiseListView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:paddingTop="5dp"
                                android:textSize="14sp" />


                            <com.xinyu.newdiggtest.view.CommentListView
                                android:id="@+id/commentList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>


</FrameLayout>



