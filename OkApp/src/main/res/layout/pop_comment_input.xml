<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/popup_live_comment_send"
        android:paddingLeft="@dimen/dp_10">

        <EditText
            android:id="@+id/popup_live_comment_edit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_centerVertical="true"

            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="说点什么吧"
            android:imeOptions="actionNone"
            android:maxLength="30"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:singleLine="true"
            android:textColorHint="@color/bar_grey_90"
            android:textCursorDrawable="@null"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#81D842" />

    </RelativeLayout>


    <TextView
        android:id="@+id/popup_live_comment_send"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shaper_kuang"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="发送"
        android:textSize="16dp" />

</RelativeLayout>
