<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/cc_providerTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:textColor="@android:color/black"
        android:text="@string/cc_login_success_tip"/>
    
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="2dip"
	    android:layout_marginLeft="5dip"
	    android:layout_marginRight="5dip"
	    android:background="#eeeeee"/>
	
	<TextView 
	    android:id="@+id/cc_voiceTip"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_marginLeft="10dip" 
	    android:layout_marginTop="10dip"
	    android:layout_marginRight="10dip"
	    android:layout_marginBottom="10dip"
	    android:textColor="@android:color/black"
	    android:text="@string/cc_connect_success_voice_tip"/>
	
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.0"
	        android:orientation="vertical">
	        
	    	<ImageView
        		android:layout_width="50dip"
        		android:layout_height="50dip"
        		android:layout_gravity="center"
        		android:scaleType="centerInside"
        		android:src="@drawable/cc_notice_audio_on"
        		android:background="@android:color/transparent"/>
	    	<TextView 
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="wrap_content"
	    	    android:gravity="center"
	    	    android:textColor="@android:color/black"
	    	    android:text="@string/cc_turn_on"/>
	    </LinearLayout>
	    
	   	<LinearLayout 
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.0"
	        android:orientation="vertical">
	        
	    	<ImageView
        		android:layout_width="50dip"
        		android:layout_height="50dip"
        		android:layout_gravity="center"
        		android:scaleType="centerInside"
        		android:src="@drawable/cc_notice_audio_off"
        		android:background="@android:color/transparent"/>
	    	<TextView 
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="wrap_content"
	    	    android:gravity="center"
	    	    android:textColor="@android:color/black"
	    	    android:text="@string/cc_turn_off"/>
	    </LinearLayout>
	</LinearLayout>

</LinearLayout>
